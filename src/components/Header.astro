---
import HeaderLink from './HeaderLink.astro';
import { SITE_TITLE } from '../consts';
import Logo from './svg/logo.astro';
const { pathname } = Astro.url;
---

<header>
	<nav>
		<a class="logo" href="/" transition:name="logo">
			<Logo animacion={true} />
		</a>
		<div class="internal-links">
			<a class="aNav" href="/" style={pathname == "/"?"color: var(--text-color-1);":""} >Home {pathname == "/" && <div class="indi" transition:name="uder"></div>}</a>
			<a class="aNav" href="/about" style={pathname == "/about"?"color: var(--text-color-1);":""}>About {pathname == "/about" && <div class="indi" transition:name="uder"></div>}</a>
			<a class="aNav" href="/blog" style={pathname == "/blog"?"color: var(--text-color-1);":""}>Blog {pathname == "/blog" && <div class="indi" transition:name="uder"></div>}</a>
			
			<div class="indicador"></div>
		</div>
		<a href="/dasboard" transition:name="das" class="get-staret border1 boton1">
			Dasboard
		</a>
	</nav>
</header>

<style>
	header {
		/* background: #fff9; */
		position: sticky;
		border: 1px solid #fff;
		top: 0;
		backdrop-filter: blur(5px);
		margin-bottom: 20px;

		nav {
			padding: 0 20px;
			height: 50px;
			display: flex;
			/* justify-content: space-between; */
			align-items: center;
			position: relative;
			
			.logo {
				display: inline-block;
				height: 40px;
				width: 40px;
				position: absolute;
				left: 20px;
				/* background-color: red; */
			}

			.internal-links {
				position: absolute;
				left: calc(50% - 108px);
				/* background-color: red; */
				a {
					display: inline-block;
					text-align: center;
					position: relative;
					color: var(--text-color-2);
					font-weight: bold;
					font-size: 15px;
					margin: 0 10px;
					transition: 0.5s;

					.indi {
						position: absolute;
						background-color: var(--text-color-1);
						bottom: 2px;
						left: 0;
						width: 100%;
						height: 2px;
					}
				}
				a:hover {
					color: var(--text-color-1);
				}

				.indicador {
					position: absolute;
					top: 0;
					left: 0;
					background-color: var(--text-color-1);
					z-index: 999;
					transition: 0.5s;
				}
			}

			.get-staret {
				position: absolute;
				right: 20px;
				font-weight: bold;
				color: var(--text-color-2);
				padding: 5px 12px;
				/* text-shadow: 2px 2px 10px #fff0; */
			}

			.get-staret:hover {
				color: var(--text-color-marca-2);
				/* text-shadow: 2px 2px 15px var(--text-color-marca-3); */
			}

		}
	}
</style>

