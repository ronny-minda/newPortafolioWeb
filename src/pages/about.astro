---
import PageLayout from "../layouts/PageLayout.astro"
---

<PageLayout description='' title='Ronny Minda Vera'>
	<main>
		<section class="hero">
			<div>
				<h1 transition:name="tituloUnit">RONNY MINDA VERA</h1>				
			</div>
			<div class="sonbra" transition:name="perfil">
				<img src="/img/perfilR1.jpg" alt="Ronny Minda Vera">
			</div>
		</section>

		<section class="exp">
			<h3>Experiencia Laboral</h3>
		</section>
	</main>
</PageLayout>

<style>
	main {

		.hero {
			width: 100%;
			/* height: 400px; */
			display: flex;
			flex-direction: row-reverse;
			justify-content: center;
			flex-wrap: wrap;

			> * {
    			&:first-child {
      				/* background-color: lightblue; */
					margin-right: 20px;
					display: flex;
					justify-content: center;
					align-items: center;
					flex-direction: column;

					h1 {
						color: var(--text-color-1);
						font-size: 20px;
						font-weight: bold;
						text-align: center;				
					}
    			}

    			&:last-child {
      				/* background-color: lightgreen; */
					width: 80px;
					height: 80px;
					border-radius: 50%;
					position: relative;
					margin-right: 10px;

					img {
						transition: 0.5s opacity;
						height: 100%;
						width: 100%;
						border-radius: 50%;
						object-fit: cover;
					}
    			}
  			}
		}

		.exp {

		}
	}

</style>